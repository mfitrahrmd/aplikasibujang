<div class="row justify-content-md-center h-100">
	<div class="card-wrapper">
		<div class="brand">
			<a href="/"><img src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="logo"></a>
		</div>
		<div class="card fat">
			<div class="card-body">
				<h4 class="card-title">Sign In</h4>
				<form class="row g-3" action="/sign-in" id="loginForm" method="POST" class="my-login-validation" novalidate="">
				<div class="form-group col-12">
					<label for="email" class="form-label">Email</label>
					<input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{oldInput.email}}" required autofocus>
					<div class="invalid-feedback">
						Email is invalid
					</div>
				</div>
				<div class="form-group col-12">
					<label for="password" class="form-label">Password</label>
					<input type="hidden" name="_csrf" value="{{csrfToken}}">
					<input type="password" class="form-control" id="password" name="password" placeholder="Password" required data-eye>
					<a href="/forgot-password" class="float-right">Forgot Password?</a>
				</div>
				<div class="form-group col-12">
					<div class="form-check">
						<label class="form-check-label" for="rememberMe">Remember Me</label>
						<input class="form-check-input" type="checkbox" id="rememberMe">
					</div>
				</div>
				{{#if errorMessage}}
				<div class="alert alert-danger" role="alert">
					{{errorMessage}}
				</div>
				{{/if}}
				<div class="form-group col-12">
					<button type="submit" class="btn btn-primary">Sign in</button>
				</div>
				<div class="mt-4 text-center">
					Don't have an account? <a href="/sign-up">Create One</a>
				</div>
				</form>
			</div>
		</div>
		<div class="footer">
			Copyright &copy; 2023 &mdash; Rafif Syahrudin 
		</div>
	</div>
</div>